<ButtonNumber@Button>
    background_color: 0.97, 0.91, 0.11, 1

<Container>
    rows: 6
    label: label
    button1: button1
    button2: button2
    button3: button3
    button4: button4
    button5: button5
    button6: button6
    button7: button7
    button8: button8
    button9: button9
    button0: button0
    buttonx: buttonx
    button_division: button_division
    button_plus: button_plus
    button_minus: button_minus
    buttonac: buttonac
    button_dot: button_dot
    button_equals: button_equals




    AnchorLayout:
        anchor_y: 'top'
        Label:
            id: label
            text_size: self.size
            halign: 'right'
            valign: 'middle'
            font_size: "70"
            text: ''

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 10

        ButtonNumber:
            id: button7
            text: '7'
            on_release: label.text += self.text
        ButtonNumber:
            id: button8
            text: '8'
            on_press: label.text += self.text
        ButtonNumber:
            id: button9
            text: '9'
            on_press: label.text += self.text
        ButtonNumber:
            id: buttonx
            text: '*'
            on_press: label.text += self.text

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 10

        ButtonNumber:
            id: button4
            text: '4'
            on_press: label.text += self.text
        ButtonNumber:
            id: button5
            text: '5'
            on_press: label.text += self.text
        ButtonNumber:
            id: button6
            text: '6'
            on_press: label.text += self.text
        ButtonNumber:
            id: button_division
            text: '/'
            on_press:
                label.text += self.text
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 10

        ButtonNumber:
            id: button1
            text: '1'
            on_press: label.text += self.text
        ButtonNumber:
            id: button2
            text: '2'
            on_press: label.text += self.text
        ButtonNumber:
            id: button3
            text: '3'
            on_press: label.text += self.text
        ButtonNumber:
            id: button_minus
            text: '-'
            on_press:
                label.text += self.text
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 10

        ButtonNumber:
            id: button0
            text: '0'
            on_press: label.text += self.text
        ButtonNumber:
            id: button_dot
            text: '.'
            on_press:
                label.text += self.text
        ButtonNumber:
            id: buttonac
            text: 'ac'
            on_press:
                root.drop()
        ButtonNumber:
            id: button_plus
            text: '+'
            on_press:
                label.text += self.text

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 10
        size_hint: 0.9, 0.7

        Button:
            id: button_equals
            text: '='
            background_color: 0.29, 0.91, 0.16, 1
            on_press:
                root.calculate()




